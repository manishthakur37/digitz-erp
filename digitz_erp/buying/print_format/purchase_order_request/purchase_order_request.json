 "html": "{% set doc = frappe.get_doc(\"Purchase Order\", doc.name) %}\n{% set sup = frappe.get_doc(\"Supplier\", doc.supplier) %}\n{% if letter_head%}\n    <div class=\"letter-head\">{{ letter_head }}</div>\n{%endif%}\n<h1 class=\"text-center\"><b>Purchase Order</b></h1>\n<table class=\"header-table\">\n    <tr>\n        <td>\n            <div class=\"header-section\">\n                <strong>Name : </strong> {{ doc.supplier or \"\" }}<br>\n                <strong>Address :</strong> {{ doc.supplier_address or \"\" }}<br>\n                <strong>Tel No :</strong> {{ sup.phone_no or \"\" }}<br>\n                <strong>Email :</strong> {{ sup.email_id or \"\" }}<br>\n            </div>\n        </td>\n        <td>\n            <div class=\"header-section\">\n                <strong>TRN :</strong> {{ sup.tax_id or \"\" }} <br>\n                <strong>No :</strong> {{ doc.name or \"\"}}<br>\n                <strong>Date :</strong> {{ doc.posting_date or \"\"}}<br>\n            </div>\n        </td>\n    </tr>\n</table>\n\n<table>\n    <thead>\n        <tr>\n            <th>SNo</th>\n            <th>Item</th>\n            <th>Description</th>\n            <th>W</th>\n            <th>H</th>\n            <th>PCS</th>\n            <th>Qty</th>\n            <th>Unit</th>\n            <th>Rate</th>\n            <th>Amount</th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for row in doc.items %}\n        <tr>\n            <td>{{ loop.index }}</td>\n            <td>{{ row.item }}</td>\n            <td>\n                {{ row.display_name }}<br>\n            </td>\n            <td>{{ row.width or 0 }}</td>\n            <td>{{ row.height or 0 }}</td>\n            <td>{{ row.p_sqm or 0 }}</td>\n            <td>{{ row.qty or 0 }}</td>\n            <td>{{ row.base_unit or 0 }}</td>\n            <td>{{ row.rate or 0 }}</td>\n            <td>{{ row.net_amount or 0 }}</td>\n        </tr>\n        {% endfor %}\n    </tbody>\n</table>\n<!--BASE -->\n<table>\n    <tr>\n        <td>\n            <div>\n                <strong>Note:</strong><br>{{doc.note or \"\"}}\n                <hr/>\n                AED: {{ doc.in_words }}\n            </div>\n        </td>\n        <td>\n            <div>\n                <table>\n                    <tr>\n                        <td><strong>Gross:</strong></td>\n                        <td>{{ doc.gross_total or 0 }}</td>\n                    </tr>\n                    <tr>\n                        <td><strong>Vat 5%:</strong></td>\n                        <td>{{ doc.tax_total or 0 }}</td>\n                    </tr>\n                    <tr>\n                        <td><strong>Total:</strong></td>\n                        <td>{{ doc.rounded_total or 0 }}</td>\n                    </tr>\n                </table>\n            </div>\n        </td>\n    </tr>\n</table>\n\n<table>\n    <tr>\n        <!--<td>-->\n        <!--    <strong>Terms & Conditions:</strong><br>-->\n        <!--    Payment: {{ doc.payment_terms or \"AS AGREED\" }}<br>-->\n        <!--    Delivery: {{ doc.delivery or \"FOR SITE\" }}<br>-->\n        <!--    Validity: {{ doc.validity or \"N/A\" }}-->\n        <!--</td>-->\n    </tr>\n</table>\n\n<!--<table>-->\n<!--    <tr>-->\n<!--        <td>-->\n<!--            <img src=\"/files/image.png\" alt=\"Footer Image\" style=\"width: 100%; max-height: 200px;\">-->\n<!--        </td>-->\n<!--    </tr>-->\n<!--</table>-->\n",
